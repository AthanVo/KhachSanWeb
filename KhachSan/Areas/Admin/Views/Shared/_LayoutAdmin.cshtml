                <a class="nav-link" href="/Admin/Phong/Index">
                    <i class="fas fa-bed"></i>
                    <span>Danh sách phòng</span>
                </a>
            </li>

            <!-- Số lượng khách hàng -->
            <li class="nav-item">
                <a class="nav-link" href="/Admin/KhachHang/Index">
