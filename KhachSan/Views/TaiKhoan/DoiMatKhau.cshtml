@model KhachSan.Models.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đổi Mật Khẩu</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0ea5e9, #0369a1);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            position: relative;
        }

        h2 {
            color: #0369a1;
            margin-bottom: 30px;
            font-weight: 600;
            font-size: 24px;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
            text-align: left;
        }

            .form-group i.lock-icon {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #0ea5e9;
                font-size: 16px;
            }

        .form-input {
            width: 100%; /* Tăng chiều rộng lên 100% */
            padding: 12px 40px 12px 40px; /* Padding trái đủ lớn để tránh chồng lấn icon khóa */
            border: 1px solid #e2e8f0;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-sizing: border-box; /* Đảm bảo padding không làm vượt kích thước */
        }

            .form-input:focus {
                border-color: #0ea5e9;
                outline: none;
                box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.2);
            }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #64748b;
            font-size: 16px;
            z-index: 1; /* Đảm bảo biểu tượng mắt nằm trên input */
        }

        .form-submit {
            display: inline-block;
            padding: 12px 20px;
            border: none;
            background: linear-gradient(135deg, #0ea5e9, #0369a1);
            color: #fff;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 48%;
            margin-top: 20px;
            font-weight: 500;
        }

            .form-submit:hover {
                background: linear-gradient(135deg, #0369a1, #0ea5e9);
                transform: translateY(-2px);
            }

        .form-cancel {
            display: inline-block;
            padding: 12px 20px;
            border: 1px solid #0ea5e9;
            background-color: #fff;
            color: #0ea5e9;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 48%;
            margin-top: 20px;
            margin-left: 4%;
            font-weight: 500;
        }

            .form-cancel:hover {
                background-color: #e2e8f0;
                color: #0369a1;
                transform: translateY(-2px);
            }

        .alert-success {
            background-color: #dcfce7;
            color: #16a34a;
            border: 1px solid #bbf7d0;
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-size: 14px;
        }

        .text-danger {
            color: #dc2626;
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }

        a {
            text-decoration: none;
            color: #0ea5e9;
            font-size: 14px;
            display: block;
            margin-top: 15px;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #0369a1;
                text-decoration: underline;
            }

        @@media (max-width: 768px) {
            .form-container {
                width: 90%;
                margin: 20px;
            }

            .form-submit, .form-cancel {
                width: 100%;
                margin-left: 0;
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Đổi Mật Khẩu</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert-success">@TempData["Success"]</div>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="DoiMatKhau" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <i class="fa-solid fa-lock lock-icon"></i>
                <input asp-for="MatKhauHienTai" type="password" class="form-input" placeholder="Mật khẩu hiện tại" />
                <i class="fa-solid fa-eye-slash toggle-password" onclick="togglePassword(this)"></i>
                <span asp-validation-for="MatKhauHienTai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-lock lock-icon"></i>
                <input asp-for="MatKhauMoi" type="password" class="form-input" placeholder="Mật khẩu mới" />
                <i class="fa-solid fa-eye-slash toggle-password" onclick="togglePassword(this)"></i>
                <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-lock lock-icon"></i>
                <input asp-for="XacNhanMatKhauMoi" type="password" class="form-input" placeholder="Xác nhận mật khẩu mới" />
                <i class="fa-solid fa-eye-slash toggle-password" onclick="togglePassword(this)"></i>
                <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
            </div>
            <button type="submit" class="form-submit">Đổi Mật Khẩu</button>
            <button type="reset" class="form-cancel">Hủy</button>
            <a asp-controller="Home" asp-action="Index">Trở về trang chủ</a>
        </form>
    </div>

    <script>
        function togglePassword(element) {
            const input = element.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                element.classList.remove("fa-eye-slash");
                element.classList.add("fa-eye");
            } else {
                input.type = "password";
                element.classList.remove("fa-eye");
                element.classList.add("fa-eye-slash");
            }
        }
    </script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}