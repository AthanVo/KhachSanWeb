@model KhachSan.Models.DangKyViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0ea5e9, #0369a1);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h2 {
            color: #0369a1;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
            text-align: left;
        }

            .form-group i {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #0ea5e9;
            }

        .form-input {
            width: 90%;
            padding: 12px 10px 12px 40px;
            border: 1px solid #e2e8f0;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-input:focus {
                border-color: #0ea5e9;
                outline: none;
                box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.2);
            }

        .form-submit {
            display: inline-block;
            padding: 12px 20px;
            border: none;
            background-color: #0ea5e9;
            color: #fff;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 48%; /* Giảm chiều rộng để đặt 2 nút cạnh nhau */
            margin-top: 20px;
            font-weight: 500;
        }

            .form-submit:hover {
                background-color: #0369a1;
            }

        .form-cancel {
            display: inline-block;
            padding: 12px 20px;
            border: 1px solid #0ea5e9;
            background-color: #fff;
            color: #0ea5e9;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 48%; /* Giảm chiều rộng để đặt 2 nút cạnh nhau */
            margin-top: 20px;
            margin-left: 4%; /* Khoảng cách giữa 2 nút */
            font-weight: 500;
        }

            .form-cancel:hover {
                background-color: #e2e8f0;
                color: #0369a1;
            }

        a {
            text-decoration: none;
            color: #0ea5e9;
            font-size: 14px;
            display: block;
            margin-top: 15px;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #0369a1;
                text-decoration: underline;
            }

        .alert-danger {
            background-color: #fee2e2;
            color: #dc2626;
            border: 1px solid #fecaca;
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 5px;
            font-size: 14px;
        }

        .text-danger {
            color: #dc2626;
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .form-container {
                width: 90%;
                margin: 20px;
            }

            .form-submit, .form-cancel {
                width: 100%; /* Trên mobile, nút chiếm toàn bộ chiều rộng */
                margin-left: 0;
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Đăng ký tài khoản</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Dangky" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <i class="fa-regular fa-user"></i>
                <input asp-for="HotenKH" class="form-input" placeholder="Họ tên" />
                <span asp-validation-for="HotenKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-regular fa-user"></i>
                <input asp-for="TenDN" class="form-input" placeholder="Tên đăng nhập" />
                <span asp-validation-for="TenDN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="MatKhau" type="password" class="form-input" placeholder="Mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-lock"></i>
                <input asp-for="Matkhaunhaplai" type="password" class="form-input" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="Matkhaunhaplai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-regular fa-envelope"></i>
                <input asp-for="Email" class="form-input" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-phone"></i>
                <input asp-for="Dienthoai" class="form-input" placeholder="Số điện thoại" />
                <span asp-validation-for="Dienthoai" class="text-danger"></span>
            </div>
            <button type="submit" class="form-submit">Đăng ký</button>
            <button type="reset" class="form-cancel">Hủy</button>
            <a asp-action="Dangnhap">Đã có tài khoản? Đăng nhập tại đây</a>
            <a asp-controller="Home" asp-action="Index">Trở về trang chủ</a>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>