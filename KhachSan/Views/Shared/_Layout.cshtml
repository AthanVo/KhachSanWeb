    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/khachsan.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Xử lý menu đa cấp cho thiết bị di động
        $(document).ready(function() {
            // Loại trừ liên kết đăng xuất khỏi xử lý menu
            $('.dropdown-submenu > a:not(.logout-link)').on('click', function(e) {
                if ($(window).width() < 992) {
                    e.preventDefault();
                    e.stopPropagation();
                    $(this).next('.dropdown-menu').toggle();
                }
            });

            // Đóng tất cả menu con khi đóng menu chính
            $('.navbar-collapse').on('hide.bs.collapse', function () {
                $('.dropdown-submenu .dropdown-menu').hide();
            });
        });
    </script>
